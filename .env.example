# PostgreSQL Database Configuration
POSTGRES_DB=hallify_db
POSTGRES_USER=hallify_user
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection URL for the application
# This is the URL your SvelteKit app will use to connect to PostgreSQL
DATABASE_URL=postgresql://hallify_user:your_secure_password_here@postgres:5432/hallify_db

# Alternative connection string for external access (from host machine)
# DATABASE_URL=postgresql://hallify_user:your_secure_password_here@localhost:5432/hallify_db

# Other environment variables (add as needed)
NODE_ENV=development
SECRET_KEY=your_secret_key_here
